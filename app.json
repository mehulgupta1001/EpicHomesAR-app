{
  "expo": {
    "name": "Epic Homes AR",
    "slug": "epic-homes-ar",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "org.epichomes.ar",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "Epic Homes AR needs access to your camera for augmented reality features.",
        "NSPhotoLibraryUsageDescription": "Epic Homes AR needs access to your photo library to save construction progress photos.",
        "NSPhotoLibraryAddUsageDescription": "Epic Homes AR needs access to your photo library to save construction progress photos.",
        "UIRequiresFullScreen": true,
        "NSMicrophoneUsageDescription": "Allow $(PRODUCT_NAME) to use your microphone"
      }
    },
    "android": {
      "package": "org.epichomes.ar",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO",
        "android.permission.INTERNET"
      ]
    },
    "plugins": [
      "expo-camera",
      "expo-file-system",
      "expo-image-picker",
      "@viro-community/react-viro"
    ],
    "extra": {
      "eas": {
        "projectId": "874485d5-c24f-46d7-a716-61a97e0c65f6"
      }
    },
    "owner": "mehulgupta1001"
  }
}
